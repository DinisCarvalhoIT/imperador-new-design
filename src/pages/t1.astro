---
import Layout from "@/layouts/Layout.astro";
import HeroPage from "@/components/HeroPageTypologies/HeroPage.astro";
import heroImg from "../../public/T1/t1_heroPage.png";
import SummaryNumbers from "@/components/HeroPageTypologies/SummaryNumbers.astro";
import SynchronizedTypologyCarousels from "@/components/HeroPageTypologies/SynchronizedTypologyCarousels.astro";
import Gallery from "@/components/Gallery/Gallery.astro";
import Local from "@/components/Local/Local.astro";
import Books from "@/components/Books/Books.astro";
import number1Svg from "../../public/T1/number_one.svg";
import number2Svg from "../../public/T1/number_two.svg";
import number132vg from "../../public/T1/132m.svg";
import { t1ApartmentDetails, t1FloorPlans } from "@/data/apartmentModels";

// Use T1 specific models only
const apartmentDetailsData = t1ApartmentDetails;
const floorPlansData = t1FloorPlans;
---

<Layout>
  <HeroPage
    imageSrc={heroImg}
    text1="Tipologias T1"
    text2="Elegância elevada à Perfeição"
    text1_mobile="Tipologias T1"
    text2_mobile="Elegância elevada"
    text3_mobile="à Perfeição"
  />
  <SummaryNumbers
    number1={number1Svg}
    label1="Suite"
    number2={number2Svg}
    label2_1="Casas de"
    label2_2="Banho"
    number3={number2Svg}
    label3_1="Lugares de"
    label3_2="Estacionamento"
    number4={number132vg}
    label4_1="Área Bruta de"
    label4_2="Construção"
  />
  <SynchronizedTypologyCarousels
    apartmentDetailsData={apartmentDetailsData}
    floorPlansData={floorPlansData}
  />
  <Gallery />
  <Local />
  <Books />
</Layout>
