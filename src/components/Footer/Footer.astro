---
import EmailIcon from "../../../public/Footer/email.svg";
import MapPinIcon from "../../../public/Footer/mapPin.svg";
import InstagramIcon from "../../../public/Footer/instagram.svg";
import FacebookIcon from "../../../public/Footer/facebook.svg";
import YoutubeIcon from "../../../public/Footer/youtube.svg";
import LogoImg from "../../../public/HomePage/logoImperador.svg";
import FormFooter from "./FormFooter.tsx";
import MieleIcon from "../../../public/Footer/miele.svg";
import FooterFinalLogo from "../../../public/Footer/FooterFinalLogov2.svg";
import Santos from "../../../public/Footer/saltos.svg";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
  class="w-full flex flex-col items-center justify-center bg-[#031721]"
  id="contacts"
>
  <div
    class="grid grid-cols-1 lg:grid-cols-3 items-center justify-items-center w-[95%] md:w-[95%] pb-10 pt-16 gap-x-5 gap-y-11"
  >
    <div class="flex flex-col items-start justify-center order-3 lg:order-1">
      <div class="text-white text-3xl font-playfairDisplay font-light pb-3">
        {t("footer.contacts")}
      </div>
      <a
        href="https://wa.me/351965611642"
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-row text-white gap-x-2 pb-1 text-sm sm:text-base transition-opacity hover:opacity-70"
        aria-label="WhatsApp"
      >
        <span class="font-montserrat font-thin">+ 351</span>
        <span class="font-poppins font-light">965 611 642</span>
        <span class="font-montserrat font-thin"
          >( {t("footer.whatsapp_label")} )</span
        >
      </a>
      <div class="flex flex-row text-white gap-x-2 pb-1 text-sm sm:text-base">
        <span class="font-montserrat font-thin">+ 351</span>
        <span class="font-poppins font-light">291 224 930</span>
        <span class="font-montserrat font-thin"
          >( {t("footer.phone_label")} )</span
        >
      </div>
      <div class="flex flex-row text-white gap-x-2 pb-1 text-sm sm:text-base">
        <span class="font-montserrat font-thin">+ 351</span>
        <span class="font-poppins font-light">965 012 231</span>
        <span class="font-montserrat font-thin">( {t("footer.pt_label")} )</span
        >
      </div>
      <div class="flex flex-row text-white gap-x-2 pb-3 text-sm sm:text-base">
        <span class="font-montserrat font-thin">+ 351</span>
        <span class="font-poppins font-light">966 779 087</span>
        <span class="font-montserrat font-thin">( {t("footer.pt_label")} )</span
        >
      </div>

      <div
        class="text-white font-montserrat font-light flex flex-row items-center justify-center gap-x-2 text-sm sm:text-base pb-2"
      >
        <EmailIcon width={14} height={11} />
        pedrocamacho@dinisecarvalho.com
      </div>
      <div
        class="text-white font-montserrat font-light flex flex-row items-center justify-center gap-x-2 text-sm sm:text-base"
      >
        <MapPinIcon width={13} height={20} />
        Rua dos Piornais, 9000-250 | Funchal
      </div>
    </div>
    <div class="flex flex-col items-center justify-center order-2">
      <LogoImg
        class="w-[200px] sm:w-[250px] md:w-[280px] lg:w-[323px] h-auto"
      />
      <div class="flex-row items-center justify-center gap-x-4 xl:hidden flex">
        <a
          href="https://www.facebook.com/p/Edif%C3%ADcio-Imperador-61561231796789/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="transition-opacity hover:opacity-70"
        >
          <FacebookIcon width={20} height={16} />
        </a>
        <a
          href="https://www.instagram.com/dinisecarvalho/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="transition-opacity hover:opacity-70"
        >
          <InstagramIcon width={18.53} height={17.9} />
        </a>
        <a
          href="https://www.youtube.com/@diniscarvalho7865/videos"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="YouTube"
          class="transition-opacity hover:opacity-70"
        >
          <YoutubeIcon width={20} height={20} />
        </a>
      </div>
    </div>
    <div
      class="flex flex-col items-center justify-center order-1 lg:order-3 text-center w-full"
    >
      <div
        class="w-full text-[#FBD784] font-montserrat font-light tracking-widest text-[13px] pb-2"
      >
        {t("footer.cta_description")}
      </div>
      <div
        class="w-full text-white font-playfairDisplay font-light text-4xl pb-6"
      >
        {t("footer.cta_title")}
      </div>
      <FormFooter client:load lang={lang} />
    </div>
  </div>
  <div class="h-px w-[95%] bg-[#7192A2]/86 sm:mb-0 mb-6"></div>
  <div
    class="xl:grid xl:grid-cols-3 flex flex-col items-center xl:justify-items-center w-[95%] md:w-[95%]"
  >
    <div class="flex-row items-center justify-center gap-x-4 hidden xl:flex">
      <a
        href="https://www.facebook.com/p/Edif%C3%ADcio-Imperador-61561231796789/"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Facebook"
        class="transition-opacity hover:opacity-70"
      >
        <FacebookIcon width={20} height={16} />
      </a>
      <a
        href="https://www.instagram.com/dinisecarvalho/"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
        class="transition-opacity hover:opacity-70"
      >
        <InstagramIcon width={18.53} height={17.9} />
      </a>
      <a
        href="https://www.youtube.com/@diniscarvalho7865/videos"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="YouTube"
        class="transition-opacity hover:opacity-70"
      >
        <YoutubeIcon width={20} height={20} />
      </a>
    </div>

    <div
      class="hidden sm:flex flex-row items-center justify-center 2xl:gap-x-20 gap-x-6"
    >
      <MieleIcon width={80} height={29} />
      <FooterFinalLogo width={220} height={91} class="" />
      <Santos width={80} height={29} />
    </div>
    <div class="sm:hidden flex flex-col items-center justify-center">
      <FooterFinalLogo width={220} height={91} class="" />
      <div class="grid grid-cols-2 items-center justify-items-center gap-x-6">
        <MieleIcon width={80} height={29} />

        <Santos width={80} height={29} />
      </div>
    </div>
    <div
      class="font-montserrat font-light text-[#7192A2] text-sm text-center sm:pt-0 pt-4 pb-2"
    >
      {t("footer.copyright")}
    </div>
  </div>
</footer>
