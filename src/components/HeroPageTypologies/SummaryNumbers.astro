---
import VectorPointer from "../../../public/HomePage/pointNumbers.svg";

interface Props {
  number1: string;
  label1: string;
  number2: string;
  label2: string;
  number3: string;
  label3: string;
  number4: string;
  label4: string;
}

const { number1, label1, number2, label2, number3, label3, number4, label4 } =
  Astro.props;
---

<section class="w-full bg-transparent absolute -bottom-8 hidden sm:block">
  <div
    class="grid items-center justify-items-center text-white lg:w-[75%] w-[90%] mx-auto"
    style="grid-template-columns: 1fr auto 1fr auto 1fr auto 1.5fr;"
  >
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-3"
        >{number1}</span
      ><span class="font-montserrat text-center" set:html={label1} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-3"
        >{number2}</span
      ><span class="font-montserrat text-center" set:html={label2} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-3"
        >{number3}</span
      ><span class="font-montserrat text-center" set:html={label3} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-3"
        >{number4}</span
      ><span class="font-montserrat text-center" set:html={label4} />
    </div>
  </div>
</section>

<section class="w-full sm:hidden block relative -mb-40 z-10">
  <div
    class="flex flex-col items-center justify-center w-[90%] mx-auto text-white gap-y-3 pt-4"
  >
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-1"
        >{number1}</span
      ><span class="font-montserrat text-center" set:html={label1} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-1"
        >{number2}</span
      ><span class="font-montserrat text-center" set:html={label2} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-1"
        >{number3}</span
      ><span class="font-montserrat text-center" set:html={label3} />
    </div>
    <VectorPointer />
    <div class="font-boldn flex flex-col items-center justify-center">
      <span class="font-playfairDisplay text-5xl md:text-6xl lg:text-7xl pb-1"
        >{number4}</span
      ><span class="font-montserrat text-center" set:html={label4} />
    </div>
  </div>
</section>
