---
import Layout from "@/layouts/Layout.astro";
import Footer from "@/components/Footer/Footer.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get model from query params
const model = Astro.url.searchParams.get("model") || "a";
---

<Layout>
  <main class="min-h-screen pt-20 pb-12 px-4 md:px-8 lg:px-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-white text-4xl md:text-6xl font-playfairDisplay mb-8">
        T2 Typology
      </h1>
      <p class="text-white/80 text-lg mb-4">
        Model: {model.toUpperCase()}
      </p>
      <p class="text-white/60">
        {t("details_apartments.see_more")} - This is the T2 apartment page.
      </p>
    </div>
  </main>
  <Footer />
</Layout>

