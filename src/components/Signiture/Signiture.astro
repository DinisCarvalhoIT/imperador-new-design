---
import signitureImage from "../../../public/Signiture/logoSigniture.png";
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="w-full flex items-center justify-center">
  <div
    class="grid grid-cols-1 lg:grid-cols-2 w-[95%] md:w-[85%] items-center justify-items-center px-[38px] p-6 md:p-10 border-t-2 border-[#7192A2]"
    style="background: linear-gradient(359.44deg, rgba(11, 29, 38, 0) 0.43%, #092635 99.46%);"
  >
    <div class="flex flex-col items-start justify-center pl-0 md:pl-20 w-full">
      <div
        class="text-[#E7C873] text-sm md:text-lg font-montserrat font-light tracking-[0.15em] pb-1 md:pb-4"
      >
        {t("signiture.tagline")}
      </div>
      <div
        class="text-white text-[25px] md:text-5xl font-playfairDisplay font-light flex flex-col items-start justify-center pb-4 md:pb-6"
      >
        <span>{t("signiture.title_line1")}</span>
        <span>{t("signiture.title_line2")}</span>
      </div>
      <div
        class="text-[#7192A2] text-sm  font-montserrat font-light text-left"
      >
        {t("signiture.description")}
      </div>
    </div>
    <div
      class="flex items-center justify-center w-full h-[200px] md:size-[350px] mt-6 md:mt-0"
    >
      <Image
        src={signitureImage}
        alt={t("signiture.logo_alt")}
        width={401}
        height={440}
        loading="lazy"
        class="w-[180px] h-auto md:w-full"
      />
    </div>
  </div>
</section>
