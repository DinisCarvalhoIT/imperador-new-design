---
import { Image } from "astro:assets";
import heroImg from "../../../public/HomePage/homePageImage.png";
import heroImgV2 from "../../../public/HomePage/homePageImagev2.png";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="w-full h-screen relative">
  <Image
    src={heroImg}
    alt={t("hero.image_alt")}
    class="w-full h-full object-cover object-center"
    widths={[640, 960, 1200, 1920, 2560]}
    sizes="100vw"
    loading="eager"
    decoding="sync"
    fetchpriority="high"
  />
  <div
    class="absolute inset-0"
    style="background: linear-gradient(180deg, rgba(11, 29, 38, 0) 85%, rgba(11, 29, 38, 0.3) 80%, #0B1D26 100%);"
  >
  </div>
  <div
    class="absolute inset-0 flex flex-col items-center justify-center px-4 text-center"
  >
    <div
      class="px-6 py-4 rounded-full"
      style="background: radial-gradient(50% 50% at 50% 50%, rgba(11, 29, 38, 0.4) 0%, rgba(18, 38, 52, 0) 100%);"
    >
      <div
        class="text-white text-lg md:text-xl lg:text-2xl font-montserrat tracking-widest font-medium"
      >
        {t("hero.welcome")}
      </div>
      <div
        class="text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-playfairDisplay font-italic"
      >
        {t("hero.title_line1")}
      </div>
      <div
        class="text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-playfairDisplay font-italic"
      >
        {t("hero.title_line2")}
      </div>
    </div>
  </div>
</section>
