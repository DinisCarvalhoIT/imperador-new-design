---
import Layout from "@/layouts/Layout.astro";
import HeroPage from "@/components/HeroPageTypologies/HeroPage.astro";
import heroImg from "../../public/T1/t1_heroPage.png";
import SummaryNumbers from "@/components/HeroPageTypologies/SummaryNumbers.astro";
import SynchronizedTypologyCarousels from "@/components/HeroPageTypologies/SynchronizedTypologyCarousels.astro";
import Gallery from "@/components/Gallery/Gallery.astro";
import Local from "@/components/Local/Local.astro";
import Books from "@/components/Books/Books.astro";
import number1Svg from "../../public/T1/number_one.svg";
import number2Svg from "../../public/T1/number_two.svg";
import number132vg from "../../public/T1/132m.svg";
import { t1ApartmentDetails, t1FloorPlans } from "@/data/apartmentModels";
import { getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const pageTitle = lang === "en"
  ? "T1 Apartments - Imperador Building | Luxury 1-Bedroom Apartments in Funchal"
  : "Apartamentos T1 - Edifício Imperador | Apartamentos de 1 Quarto de Luxo no Funchal";
const pageDescription = lang === "en"
  ? "Discover T1 luxury apartments at Imperador Building in Funchal. 1 suite bedroom, 2 bathrooms, 2 parking spaces, and 132m² of gross construction area. Contemporary design with premium finishes."
  : "Descubra apartamentos de luxo T1 no Edifício Imperador no Funchal. 1 quarto suite, 2 casas de banho, 2 lugares de estacionamento e 132m² de área bruta de construção. Design contemporâneo com acabamentos premium.";

const breadcrumbs = [
  { name: lang === "en" ? "Home" : "Início", url: lang === "en" ? "/" : "/pt" },
  { name: "T1 Apartments", url: lang === "en" ? "/t1" : "/pt/t1" }
];

// Use T1 specific models only
const apartmentDetailsData = t1ApartmentDetails;
const floorPlansData = t1FloorPlans;
---

<Layout title={pageTitle} description={pageDescription} ogImage="/T1/t1_heroPage.png" breadcrumbs={breadcrumbs}>
  <HeroPage
    imageSrc={heroImg}
    text1="Tipologias T1"
    text2="Elegância elevada à Perfeição"
    text1_mobile="Tipologias T1"
    text2_mobile="Elegância elevada"
    text3_mobile="à Perfeição"
  />
  <SummaryNumbers
    number1={number1Svg}
    label1="Suite"
    number2={number2Svg}
    label2_1="Casas de"
    label2_2="Banho"
    number3={number2Svg}
    label3_1="Lugares de"
    label3_2="Estacionamento"
    number4={number132vg}
    label4_1="Área Bruta de"
    label4_2="Construção"
  />
  <SynchronizedTypologyCarousels
    apartmentDetailsData={apartmentDetailsData}
    floorPlansData={floorPlansData}
  />
  <Gallery />
  <Local />
  <Books />
</Layout>
